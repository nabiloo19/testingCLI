<section class="page-wrapper bg-grey">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="title title--primary title--x-large title--has-dash mb-30">{{ trans('blocks.home.latest_products') }}</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% if products is not empty %}
                    <div class="grid-block products-list-container">
                        {% for product in products %}
                            {% include 'pages.partials.product.card' %}
                        {% endfor %}
                    </div>
                    {% include 'pages.partials.loader-status' with {next_page:products.next_page} %}
                {% endif %}
            </div>
        </div>
    </div>
</section>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        salla.infiniteScroll.initiate('.products-list-container', '.product-block')
    });
</script>