<div class=" md:flex flex-wrap items-center" {{ attirubtes|raw }}>
    {% for key,detail in option.details %}
        <div class="relative flex items-center mb-4 md:w-6/12">
            <input id="field_{{ key_prefix }}_{{ option.id }}_{{ detail.id }}"
                    {{ detail.has_quantity(option.product)?"":"disabled" }}
                    {{ option.is_selected(detail.id)?"checked":"" }}
                   name="options[{{ option.id }}][]"
                   data-option="{{ option.id }}"
                   class="visibility_condition focus:ring-transparent h-6 w-6 text-primary border-border-color rounded-md"
                   value="{{ detail.id }}"
                   type="checkbox">
            <label for="field_{{ key_prefix }}_{{ option.id }}_{{ detail.id }}" class="ms-2 text-sm font-medium text-gray-700">
                {{ detail.full_name(option.product) }}
            </label>
        </div>
    {% endfor %}
</div>