    {# <link rel="stylesheet" href="{{ asset(theme.font.path) }}"/> #}

    {# tracking services, custom css feature. #}
    {% hook 'head:end' %}
    {% block head %}{% endblock %}

    <style>
        :root {

            {#--color-main-d: {{ theme.darker_color(0.15) }};#}
            {#--color-main-l: {{ theme.lighter_color(0.15) }};#}
